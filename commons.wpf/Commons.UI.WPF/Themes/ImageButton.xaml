<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:Commons.UI.WPF.Controls">
	<Style TargetType="{x:Type Controls:ImageButton}" BasedOn="{StaticResource {x:Type Button}}">
		<Setter Property="ContentTemplate">
			<Setter.Value>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<Image Source="../Images/ok.png"></Image>
						<TextBlock Padding="2,0">Reload</TextBlock>
					</StackPanel>
				</DataTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
